@model int
<a asp-action="Edit" asp-route-id="@Model" class="text-info mr-2">
    <i class="bi bi-pencil-square"></i></a>
<a asp-action="Details" asp-route-id="@Model" class="text-dark mr-2"><i class="bi bi-table"></i></a>
<a asp-action="Delete" asp-route-id="@Model"  class="text-danger mr-2"><i class="bi bi-trash-fill"></i></a>
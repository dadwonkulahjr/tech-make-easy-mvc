@model int

@{
    if (Model == 0)
    {
        <a asp-action="Create" class="btn btn-outline-info"><i class="bi bi-plus-square mr-5"></i>&nbsp;Create New</a>
    }
    else
    {
        <a asp-action="Create" class="btn btn-outline-info" asp-route-CategoryId="@Model"><i class="bi bi-plus-square mr-5"></i>&nbsp;Create New</a>
    }
}
@model IEnumerable<Category>

<h3 class="mt-4">
    Add Members to Category
</h3>
<form id="memberToCategory" asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <h4>Category</h4>
                <select id="categoryId" name="categoryId" class="form-select" asp-items="Model.ConvertToSelectListItem(0)">
                    <option value="0">--Please choose a Category--</option>
                </select>
            </div>
        </div>
    </div>
    <div id="alert_placeholder">
    </div>
    <hr />
    <div class="row">
        <div class="col-md-10">
            <h4>Members</h4>
            <div class="form-group">
                <div id="usersCheckList">
                    <partial name="_UserListViewPartial" model="new UserCategoryListViewModel{CategoryId = 0, Users = null, UsersSelected = null}" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <hr />
        </div>
    </div>

    <div class="rows">
        <div class="col-md-10">
            <div class="form-group offset-10">
                <button type="button" id="saveSelectedUsers" name="saveSelectedUsers" class="btn btn-outline-success">
                    Save
                </button>
            </div>
        </div>
    </div>
</form>

<div class="progress collapse">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info text-white" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width:100%;height:100%;">
        <span style="font-size:2rem;">Saving Data...</span>
    </div>
</div>
<div class="col-md-12">
    <div class="alert alert-success alert-dismissible collapse text-center" style="font-size:2rem;" role="alert">
        The Data has been saved successfully!!
    </div>
</div>


@section Scripts{
   @{await Html.RenderPartialAsync("_UserToCategoryAndBootstrapAlertScriptPartial");}
}